{
  "name": "yarn-plugin-auto-install",
  "version": "0.0.0-semantically-released",
  "description": "A yarn (berry) plugin for running `yarn install` automatically.",
  "keywords": [
    "yarn",
    "berry",
    "zero-installs",
    "install",
    "automation"
  ],
  "repository": "git@github.com:WillBooster/yarn-plugin-auto-install.git",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "main": "dist/index.cjs",
  "scripts": {
    "build": "node esbuild.js",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{src,__tests__}/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepublishOnly": "pinst --disable",
    "prettify": "prettier --color --write \"**/{.*/,}*.{css,htm,html,js,json,json5,jsx,md,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "postpublish": "pinst --enable",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "devDependencies": {
    "@types/eslint": "8.2.1",
    "@types/micromatch": "4.0.2",
    "@types/node": "16.11.17",
    "@types/prettier": "2.4.2",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "@willbooster/eslint-config-ts": "6.5.0",
    "@willbooster/prettier-config": "6.5.0",
    "@willbooster/renovate-config": "6.5.0",
    "@yarnpkg/core": "3.2.0-rc.9",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "esbuild": "0.14.10",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.3",
    "husky": "7.0.4",
    "lint-staged": "12.1.4",
    "micromatch": "4.0.4",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "sort-package-json": "1.53.1",
    "typescript": "4.5.4"
  },
  "packageManager": "yarn@3.2.0-rc.9"
}
