{
  "name": "yarn-plugin-auto-install",
  "version": "0.0.0-semantically-released",
  "description": "A yarn (berry) plugin for running `yarn install` automatically.",
  "keywords": [
    "yarn",
    "berry",
    "zero-installs",
    "install",
    "automation"
  ],
  "repository": "github:WillBooster/yarn-plugin-auto-install",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "main": "dist/index.min.cjs",
  "bin": "./bin/install-plugin.cjs",
  "files": [
    "bin/"
  ],
  "scripts": {
    "build": "build-ts build -t app -e VERSION && cp dist/index.min.cjs .yarn/plugins/plugin-auto-install.cjs",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{__tests__,scripts,src}/**/*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "resolutions": {
    "npm/chalk": "^4.1.2"
  },
  "devDependencies": {
    "@semantic-release/exec": "6.0.3",
    "@types/eslint": "8.4.10",
    "@types/micromatch": "4.0.2",
    "@types/node": "18.11.18",
    "@types/prettier": "2.7.2",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "@willbooster/eslint-config-ts": "10.0.8",
    "@willbooster/prettier-config": "9.1.1",
    "@willbooster/renovate-config": "9.5.0",
    "@yarnpkg/core": "4.0.0-rc.34",
    "build-ts": "3.1.2",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-class-members": "1.16.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-unicorn": "45.0.2",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "micromatch": "4.0.5",
    "pinst": "3.0.0",
    "prettier": "2.8.1",
    "semantic-release": "20.0.2",
    "sort-package-json": "2.1.0",
    "typescript": "4.9.4"
  },
  "packageManager": "yarn@4.0.0-rc.34",
  "publishConfig": {
    "access": "public"
  }
}
