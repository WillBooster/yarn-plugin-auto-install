{
  "name": "yarn-plugin-auto-install",
  "version": "0.0.0-semantically-released",
  "description": "A yarn (berry) plugin for running `yarn install` automatically.",
  "keywords": [
    "yarn",
    "berry",
    "zero-installs",
    "install",
    "automation"
  ],
  "repository": "github:WillBooster/yarn-plugin-auto-install",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "bin": "./bin/install-plugin.cjs",
  "files": [
    "bin/"
  ],
  "scripts": {
    "build": "node esbuild.js && cp dist/index.cjs .yarn/plugins/plugin-auto-install.cjs",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{src,__tests__,scripts}/**/*.{cjs,js,jsx,mjs,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "resolutions": {
    "npm/chalk": "^4.1.2"
  },
  "devDependencies": {
    "@semantic-release/exec": "6.0.3",
    "@types/eslint": "8.4.2",
    "@types/micromatch": "4.0.2",
    "@types/node": "16.11.36",
    "@types/prettier": "2.6.1",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "@willbooster/eslint-config-ts": "9.0.0",
    "@willbooster/prettier-config": "9.0.0",
    "@willbooster/renovate-config": "9.3.0",
    "@yarnpkg/core": "3.2.2",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "esbuild": "0.14.39",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-class-members": "1.14.1",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "micromatch": "4.0.5",
    "pinst": "3.0.0",
    "prettier": "2.6.2",
    "semantic-release": "18.0.1",
    "sort-package-json": "1.57.0",
    "typescript": "4.6.4"
  },
  "packageManager": "yarn@3.2.1"
}
